<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/salonbikebarra</item>
<item name="android:background">@drawable/menubar</item>
<item name="android:textColor">#000000</item>
        
    </style>

   
    <style name="salonbikebarra" parent="@style/Widget.AppCompat.Light.ActionBar">
	    <item name="android:background">@drawable/menubar</item>
	    <item name="android:dropDownListViewStyle">@style/salonbikeactionbar.listview</item>
	    
	    
	    
	</style>
	<style name="salonbiketitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textColor">#000000</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:layout_width">match_parent</item>
	</style>
	<style name="salonbikeactionbar.listview" parent="@style/Widget.AppCompat.ListView.DropDown">
	    <item name="android:background">@drawable/menubar</item>
	</style>

</resources>
