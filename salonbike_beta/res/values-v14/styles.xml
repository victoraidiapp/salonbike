<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/salonbikebarra</item>
    </style>
	<style name="salonbikebarra" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
	    <item name="android:background">@drawable/menubar_shadow</item>
	    <item name="android:paddingBottom">5dp</item>
	    <item name="android:titleTextStyle">@style/salonbiketitle</item>
	    <item name="android:icon">@drawable/menu_icon</item>
	</style>
	<style name="salonbiketitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textColor">#000000</item>
	</style>
</resources>
