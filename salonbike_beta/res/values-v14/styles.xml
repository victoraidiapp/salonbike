<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarItemBackground">@drawable/itembackground</item>
        <item name="android:actionBarStyle">@style/salonbikebarra</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Example</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Example</item>
<!--  <item name="android:background">@drawable/menubar</item>-->
<item name="android:textColor">#000000</item>
<item name="actionBarWidgetTheme">@style/Theme.Example.Widget</item>
        
    </style>

   
    <style name="salonbikebarra" parent="@style/Widget.AppCompat.Light.ActionBar">
	    <item name="android:background">@drawable/menubar</item>
	    
	    
	    
	</style>
	<style name="salonbiketitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textColor">#000000</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:layout_width">match_parent</item>
	</style>
	<style name="PopupMenu.Example" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_background</item>	
    </style>
    <style name="DropDownListView.Example" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/itembackground</item>
    </style>
    <style name="DropDownNav.Example" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">#FFFFFF</item>
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:dropDownSelector">@drawable/itembackground</item>
    </style>
	
	<style name="MyDialog" parent="@style/Theme.AppCompat">
    <!--  other attributes  -->
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:background">@android:color/transparent</item>
</style>

	<style name="Theme.Example.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Example</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Example</item>
    </style>

</resources>
